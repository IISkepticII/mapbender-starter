#!/bin/bash

cd application
/usr/bin/php8.1 bin/composer install -o --no-scripts --no-suggest
/usr/bin/php8.1 bin/composer init-example
/usr/bin/php8.1 app/console assets:install --symlink --relative
/usr/bin/php8.1 app/console mapbender:database:init -v
/usr/bin/php8.1 bin/composer run post-install-cmd
echo Bootstrap finished!
echo If you want to run the builtin development server, run:
echo ' cd application'
echo ' php app/console server:run'
